# ===========================================
# COMMUNITY SCAM REGISTRY - ENVIRONMENT VARIABLES
# ===========================================

# ===========================================
# API CONFIGURATION
# ===========================================
# Backend API URL (required)
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
# Application name and version
NEXT_PUBLIC_APP_NAME="Community Scam Registry"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Application description
NEXT_PUBLIC_APP_DESCRIPTION="A comprehensive platform for tracking and reporting scams with community-driven verification"

# ===========================================
# SUPPORT CONFIGURATION
# ===========================================
# Support email addresses
NEXT_PUBLIC_SUPPORT_EMAIL=support@scamnepal.com
NEXT_PUBLIC_BUGS_EMAIL=bugs@scamnepal.com
NEXT_PUBLIC_ADMIN_EMAIL=admin@scamnepal.com

# Domain configuration
NEXT_PUBLIC_DOMAIN=scamnepal.com

# ===========================================
# FEATURE FLAGS
# ===========================================
# Development tools (set to false in production)
NEXT_PUBLIC_ENABLE_DEVTOOLS=true

# Analytics and monitoring
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true

# Advanced features
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
# Maximum file size in bytes (default: 10MB)
NEXT_PUBLIC_MAX_FILE_SIZE=10485760

# Allowed file types (comma-separated)
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# Maximum number of files per upload
NEXT_PUBLIC_MAX_FILES=5

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Session timeout in milliseconds (default: 1 hour)
NEXT_PUBLIC_SESSION_TIMEOUT=3600000

# Maximum login attempts before lockout
NEXT_PUBLIC_MAX_LOGIN_ATTEMPTS=5

# Lockout duration in milliseconds (default: 15 minutes)
NEXT_PUBLIC_LOCKOUT_DURATION=900000

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================
# Node environment
NODE_ENV=development

# ===========================================
# PRODUCTION CONFIGURATION EXAMPLE
# ===========================================
# For production deployment, update these values:
#
# NEXT_PUBLIC_API_URL=https://api.your-domain.com/api
# NEXT_PUBLIC_APP_URL=https://your-domain.com
# NEXT_PUBLIC_DOMAIN=your-domain.com
# NEXT_PUBLIC_SUPPORT_EMAIL=support@your-domain.com
# NEXT_PUBLIC_BUGS_EMAIL=bugs@your-domain.com
# NEXT_PUBLIC_ADMIN_EMAIL=admin@your-domain.com
# NEXT_PUBLIC_ENABLE_DEVTOOLS=false
# NEXT_PUBLIC_ENABLE_ANALYTICS=true
# NODE_ENV=production
