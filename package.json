{
  "name": "scamnepal-csr",
  "version": "1.0.0",
  "description": "Community Scam Registry - A comprehensive platform for tracking and reporting scams",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "clean": "npm run clean:backend && npm run clean:frontend",
    "clean:backend": "cd backend && npm run clean",
    "clean:frontend": "cd frontend && npm run clean",
    "db:setup": "cd backend && npm run db:setup",
    "db:reset": "cd backend && npm run db:reset",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint"
  },
  "keywords": [
    "scam",
    "registry",
    "community",
    "fraud",
    "protection",
    "nepal",
    "nextjs",
    "express",
    "typescript"
  ],
  "author": "ScamNepal Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/scamnepal-csr.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/scamnepal-csr/issues"
  },
  "homepage": "https://github.com/yourusername/scamnepal-csr#readme"
}
